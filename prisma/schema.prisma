// Team Planner Prisma Schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Schedule {
  id               String   @id @default(uuid())
  userId           String   @map("user_id")
  name             String
  planningPeriod   Json     @map("planning_period")
  weekConfig       Json     @map("week_config")
  people           Json
  holidays         Json
  frSchedule       Json     @map("fr_schedule")
  frCapacityDays   Int      @default(3) @map("fr_capacity_days")
  projects         Json
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  @@index([userId])
  @@index([updatedAt(sort: Desc)])
  @@map("schedules")
}
